{
    "private": true,
    "type": "module",
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "axios": "^1.6.4",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.18",
        "vite": "^5.0"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.1.16"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi"
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
